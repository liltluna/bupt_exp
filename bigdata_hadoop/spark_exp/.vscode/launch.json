    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch SparkPi",
            "request": "launch",
            "mainClass": "com.example.SparkPi",
            "projectName": "spark_exp"
        },
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Launch App",
            "request": "launch",
            "mainClass": "com.example.App",
            "projectName": "spark_exp",
            "args": [
                "--master",
                "local"
            ]
        }
    ]
}